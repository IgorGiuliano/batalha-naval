generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String      @id @default(auto()) @map("_id") @db.ObjectId
  email  String      @unique
  scores GameScore[]
}

model GameScore {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  score    Int
  gameDate DateTime
  userId   String   @map("user_id") @db.ObjectId
  user     User     @relation(fields: [userId], references: [id])
}
